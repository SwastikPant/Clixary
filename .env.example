# This example contains common environment variables used by the project.

##### Django core
# Django secret key (keep secret in production)
SECRET_KEY=your_django_secret_key_here
# Debug mode: True or False
DEBUG=True
# Comma separated hosts for production, e.g. example.com,localhost
ALLOWED_HOSTS=localhost,127.0.0.1

##### Database
# For local development you can switch to sqlite by leaving DB_HOST blank
DB_ENGINE=django.db.backends.postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autumn_db
DB_USER=postgres
DB_PASSWORD=your_password_here

##### Email
# Use these names so Django picks the settings up directly.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_smtp_app_password_here

##### OAuth / Omniport
OMNIPORT_CLIENT_ID=your_omniport_client_id_here
OMNIPORT_CLIENT_SECRET=your_omniport_client_secret_here

##### Optional: Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# Optional Celery settings
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# End of example